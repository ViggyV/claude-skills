{
  "name": "product-analytics",
  "description": "Set up analytics dashboards and investor-ready reports",
  "mode": "interactive",
  "stages": [
    {
      "id": "analytics",
      "type": "skill",
      "skill": "data-engineering/analytics-builder",
      "description": "Define KPIs, metrics, and analytics events to track",
      "outputs": {
        "analytics_spec": "docs/analytics/{date}-{name}-metrics.md"
      },
      "gate": {
        "type": "approval",
        "prompt": "Analytics spec ready. Build data pipeline?"
      }
    },
    {
      "id": "pipeline",
      "type": "skill",
      "skill": "data-engineering/data-pipeline",
      "description": "Build data collection and transformation pipeline",
      "inputs": {
        "analytics_spec": "${analytics.outputs.analytics_spec}"
      },
      "outputs": {
        "pipeline_code": "src/analytics/"
      }
    },
    {
      "id": "dashboard",
      "type": "skill",
      "skill": "community/d3js-visualization",
      "description": "Create interactive D3.js dashboard visualizations",
      "inputs": {
        "analytics_spec": "${analytics.outputs.analytics_spec}"
      },
      "outputs": {
        "dashboard": "src/dashboard/"
      }
    },
    {
      "id": "report",
      "type": "skill",
      "skill": "anthropics-official/document-skills/pptx",
      "description": "Generate investor-ready analytics report as PPTX",
      "inputs": {
        "analytics_spec": "${analytics.outputs.analytics_spec}"
      },
      "outputs": {
        "report_deck": "output/{name}-analytics-report.pptx"
      },
      "gate": {
        "type": "approval",
        "prompt": "Analytics report ready. Review?"
      }
    }
  ]
}
